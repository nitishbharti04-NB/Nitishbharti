    <!-- jsPDF and html2canvas (to export the styled certificate) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

    <script>
        // Utility to generate a sample NITI CERT id if not present
        function generateNitiId() {
            const rand = Math.random().toString(36).substr(2,8).toUpperCase();
            return 'NITI-' + rand;
        }

        // Fill dynamic values (optional — you can replace these with real values before download)
        document.addEventListener('DOMContentLoaded', () => {
            // If values already set in the HTML, we keep them. Otherwise set defaults:
            const nameEl = document.getElementById('studentName');
            const courseEl = document.getElementById('courseName');
            const scoreEl = document.getElementById('scoreValue');
            const totalEl = document.getElementById('scoreTotal');
            const gradeEl = document.getElementById('gradeValue');
            const dateEl = document.getElementById('dateValue');
            const idEl = document.getElementById('certId');

            // Example: if certificate id is not customized, generate one
            if (!idEl.textContent.trim() || idEl.textContent.indexOf('NITI CERT') === -1) {
                idEl.textContent = 'NITI CERT - ' + generateNitiId();
            }

            // Set today's date if date in template looks like a placeholder
            if (!dateEl.textContent.trim() || dateEl.textContent.match(/Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec/) === null) {
                dateEl.textContent = new Date().toDateString();
            }

            // You can programmatically set name/course/score/grade here if integrating with your app:
            // nameEl.textContent = 'Candidate Name';
            // courseEl.textContent = 'Python Test';
            // scoreEl.textContent = '14'; totalEl.textContent = '15';
            // gradeEl.textContent = 'Advanced';
        });

        // Download handler: capture the certificate container and export as PDF (Landscape Letter)
        document.getElementById('btnDownload').addEventListener('click', async () => {
            const certificateNode = document.getElementById('certificate');

            // Increase scale for better quality in PDF
            const scale = 2;
            const opts = {
                scale: scale,
                useCORS: true,
                logging: false,
                backgroundColor: null
            };

            // Show a small temporary overlay or change button state to indicate processing (optional)
            const origText = document.getElementById('btnDownload').textContent;
            document.getElementById('btnDownload').textContent = 'Preparing PDF...';
            document.getElementById('btnDownload').disabled = true;

            try {
                const canvas = await html2canvas(certificateNode, opts);

                // Get image data from canvas
                const imgData = canvas.toDataURL('image/png');

                // Create a jsPDF instance for letter landscape (units: pt)
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF({
                    orientation: 'landscape',
                    unit: 'pt',
                    format: 'letter'
                });

                // Page size in points
                const pageWidth = doc.internal.pageSize.getWidth();
                const pageHeight = doc.internal.pageSize.getHeight();

                // Calculate image dims to fit the page while preserving aspect ratio
                const imgWidth = canvas.width;
                const imgHeight = canvas.height;
                const ratio = Math.min(pageWidth / imgWidth, pageHeight / imgHeight);
                const renderWidth = imgWidth * ratio;
                const renderHeight = imgHeight * ratio;
                const marginX = (pageWidth - renderWidth) / 2;
                const marginY = (pageHeight - renderHeight) / 2;

                // Add the image to the PDF
                doc.addImage(imgData, 'PNG', marginX, marginY, renderWidth, renderHeight, undefined, 'FAST');

                // Save PDF using student's name if available
                const name = document.getElementById('studentName').textContent.trim() || 'certificate';
                const safeName = name.replace(/\s+/g, '_').replace(/[^\w\-\.]/g, '');
                doc.save(`${safeName}_NITI_CERT.pdf`);
            } catch (err) {
                console.error('PDF generation failed', err);
                alert('Failed to generate PDF. See console for details.');
            } finally {
                document.getElementById('btnDownload').textContent = origText;
                document.getElementById('btnDownload').disabled = false;
            }
        });
    </script>
